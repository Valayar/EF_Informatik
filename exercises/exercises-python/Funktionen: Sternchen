eingabe= input('Breite des Rechtecks')
eingabe2 = input('Höhe des Rechtecks')
Breite = abs(int(eingabe))                              # die Funktion abs gibt die Wurzel vom quadrierten Wert zurück 
Höhe = int((int(eingabe2)**2)**0.5)                     



def Marcus():
    for i in range(Breite):
        print ('*', end='')
    print('')
    for i in range(Höhe -2):
        print ('*',end='')
        for i in range(Breite -2):
            print(' ',end='')
        print('*')
    for i in range(Breite):
        print ('*', end='')
        
Marcus()

# Überarbeitete Version:

def Marc():
        print('*' * Breite)
        for i in range(Höhe):
            print('*' + ' ' * (Breite -2) + '*')
        print('*' * Breite)


Marc()




